{
  "compilerOptions": {
    "target": "ES2020", // Output JS version
    "module": "nodenext", // For Node.js
    "rootDir": "./src", // Your TS source folder
    "outDir": "./dist", // Output folder for JS
    "strict": true, // Enable type checks
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
